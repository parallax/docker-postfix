apiVersion: v1
kind: Service
metadata:
  labels:
    app: '{SITENAME}-{BRANCH}-{ENVIRONMENT}'
    primary: 'true'
  name: 'smtp'
spec:
  ports:
  - name: smtp
    port: 25
    protocol: TCP
    targetPort: 25
  selector:
    app: '{SITENAME}-{BRANCH}-{ENVIRONMENT}'
  sessionAffinity: None
  type: ClusterIP
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: '{SITENAME}-{BRANCH}-{ENVIRONMENT}'
    primary: 'true'
  name: 'smtp-alt'
spec:
  ports:
  - name: smtp
    port: 2525
    protocol: TCP
    targetPort: 25
  selector:
    app: '{SITENAME}-{BRANCH}-{ENVIRONMENT}'
  sessionAffinity: None
  type: ClusterIP